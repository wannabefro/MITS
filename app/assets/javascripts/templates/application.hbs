<nav class="navbar navbar-default" role="navigation">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      {{#link-to 'index' classNames='navbar-brand'}}Mits{{/link-to}}
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        {{#if session.isAuthenticated}}
          <p class="navbar-text">Welcome {{currentUser.username}}</p>
          {{#link-to 'mits.index' tagName='li' href=false}}
            {{#link-to 'mits.index'}}Mits{{/link-to}}
          {{/link-to}}
        {{/if}}
      </ul>
      <ul class="nav navbar-nav navbar-right">
        {{#if session.isAuthenticated}}
        <li><a {{action 'invalidateSession'}} href='#'>Logout</a></li>
        {{else}}
        {{#link-to 'register' tagName='li' href=false}}
          {{#link-to 'register'}}Sign Up{{/link-to}}
        {{/link-to}}
        <form class="form-inline navbar-btn" {{action "login" on='submit'}}>
          <div class="form-group">
            {{input class="username form-control" value=identification type="text" placeholder="Username or Email"}}
          </div>
          <div class="form-group">
            {{input class="password form-control" value=password type="password" placeholder="Password"}}
          </div>
          <button class="submit btn btn-primary" type="submit">Sign In</button>
        </form>
        {{/if}}
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>
<div class='container'>
  {{outlet}}
</div>
